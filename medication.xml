<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alisa.starterhacks.Medication">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="868dp"
        android:layout_height="836dp"
        app:srcCompat="@drawable/Frame"
        tools:layout_editor_absoluteX="-242dp"
        tools:layout_editor_absoluteY="-75dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="MEDICATIONS"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:text="Perscription Name"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/textMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Month"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Day"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/textYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Year"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/refillDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refill Day"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/refillMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refill Month"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/refillYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refill Year"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage (mg)"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="404dp" />

    <TextView
        android:id="@+id/perday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# doses / day"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="444dp" />

</android.support.constraint.ConstraintLayout>